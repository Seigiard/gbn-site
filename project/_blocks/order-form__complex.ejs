<div class="order-form">
  <div class="order-form--controls">
    <div class="control-row">
      <label for="housePrice">Стоимость дома, таунхауса</label>
      <input required value="2&thinsp;000&thinsp;000" type="text" name="house_price" id="housePrice"
        class="input input__big input__100" placeholder="Стоимость дома, таунхауса" />
    </div>
    <div class="control-row">
      <div class="order-form--email-form">
          <input disable-on-submit required type="email" name="mail" id="mail" class="input" placeholder="Электронная почта" />
          <button disable-on-submit type="submit" class="button">
            <span class="on-disable--show">Расчёт отправлен</span>
            <span class="on-disable--hide">Отправить расчёт</span>
          </button>
      </div>
    </div>
  </div>
  <div class="order-form--price">
    <label>Комиссия 5%</label>
    <span><span id="totalPrice">100&thinsp;000</span><span class="rhs">&nbsp;</span>₽</span>
    <input type="hidden" name="price" value="100000" />
  </div>
</div>